<html lang="en">
<head>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width">
        <title>Mercado Liebre</title>
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
        <link href="../css/productform.css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/a289e801ed.js" crossorigin="anonymous"></script>
    </head>

</head>
<body>
    <header class="main-header">
        <div class="main-header-top-bar">
            <img src="/images/logo-mercado-liebre.svg" class="logo">
        </div>
        
        
    </header>
    <main class="main">
        <section class="new-product">
            <h1 class="new-product_title">Agrega un producto nuevo</h1>
            <form action="new-product__form" action="" method="POST">
                <div class="form-group">
                    <label for="name" class="etiquetas">Nombre de producto: </label>
                    <input id="name" name="name" class="form-group__input" type="text">
                </div>

                <div class="form-group">
                    <label for="description"> Descripcion de producto: </label>
                    <input id="description" name="description" class="form-group__input" type="text">
                </div>

                <div class="form-group">
                    <label for="image"> Imagen del producto: </label>
                    <input id="image" name="image" class="form-group__file" type="file">
                </div>

                <div class="form-group">
                    <label for="category"> Categoria: </label>
                    <input id="category" name="category" class="form-group__input" type="text">
                </div>

                <div class="form-group">
                    <label for="price"> Precio: </label>
                    <input id="price" name="price" class="form-group__input" type="number">
                </div>

            </form>
        </section>
    </main>    
    
</body>
</html>